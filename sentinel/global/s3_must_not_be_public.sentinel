import "tfplan/v2" as tfplan

//find all aws_s3_bucket that has acl="public-read-write"
violatingS3Buckets = filter tfplan.resource_changes as _, rc {
    rc.type is "aws_s3_bucket" and
    rc.mode is "managed" and
    (rc.change.actions contains "create" or rc.change.actions contains "update") and
    rc.change.after.acl in ["public-read-write", "public-read"]
}

violatingS3BucketObjects = filter tfplan.resource_changes as _, rc {
    rc.type is "aws_s3_bucket_object" and
    rc.mode is "managed" and
    (rc.change.actions contains "create" or rc.change.actions contains "update") and
    rc.change.after.acl in ["public-read-write", "public-read"]
}

main = rule {
  length(violatingS3BucketObjects) == 0 and length(violatingS3Buckets) == 0
}
